# i3configs
# Temporary Backup
exec_always cp .config/i3/* Documents/Configs/Config-Backups/TemporaryBackup/i3configs/
# Backup
exec cp .config/i3/* Documents/Configs/Config-Backups/Backup/i3configs/

# Polybar
# Temporary Backup
exec_always cp .config/polybar/* Documents/Configs/Config-Backups/TemporaryBackup/polybar/
# Backup
exec cp .config/polybar/* Documents/Configs/Config-Backups/Backup/polybar/

# Neofetch
# Temporary Backup
exec_always cp .config/neofetch/* Documents/Configs/Config-Backups/TemporaryBackup/neofetch/
# Backup
exec cp .config/neofetch/* Documents/Configs/Config-Backups/Backup/neofetch/

# Picom
# Temporary Backup
exec_always cp .config/picom/* Documents/Configs/Config-Backups/TemporaryBackup/picom/
# Backup
exec cp .config/picom/* Documents/Configs/Config-Backups/Backup/picom/

# Rofi
# Temporary Backup
exec_always cp .config/rofi/* Documents/Configs/Config-Backups/TemporaryBackup/rofi/
# Backup
exec cp .config/rofi/* Documents/Configs/Config-Backups/Backup/rofi/

# sxhkd
# Temporary Backup
exec_always cp .config/sxhkd/* Documents/Configs/Config-Backups/TemporaryBackup/sxhkd/
# Backup
exec cp .config/sxhkd/* Documents/Configs/Config-Backups/Backup/sxhkd/

# Firefox userChrome.css
# Temporary Backup
exec_always cp .mozilla/firefox/inxm00oz.default-release/chrome/* Documents/Configs/Config-Backups/TemporaryBackup/firefox/userchrome.css/
# Backup
exec cp .mozilla/firefox/inxm00oz.default-release/chrome/* Documents/Configs/Config-Backups/Backup/firefox/userchrome.css/

# Firefox Homepage html
# Temporary Backup
exec_always cp Documents/Configs/Firefox/homepagehtml/* Documents/Configs/Config-Backups/TemporaryBackup/firefox/homepagehtml/
# Backup
exec cp Documents/Configs/Firefox/homepagehtml/* Documents/Configs/Config-Backups/TemporaryBackup/firefox/homepagehtml/

# Firefox Autoconfig
# .cfg
# Temporary Backup
exec_always cp /usr/lib/firefox/autoconfig.cfg Documents/Configs/Config-Backups/TemporaryBackup/firefox/autoconfig/
# Backup
exec cp /usr/lib/firefox/autoconfig.cfg Documents/Configs/Config-Backups/TemporaryBackup/firefox/autoconfig/
# .js
# Temporary Backup
exec_always cp /usr/lib/firefox/defaults/pref/autoconfig.js Documents/Configs/Config-Backups/TemporaryBackup/firefox/autoconfig/
# Backup
exec cp /usr/lib/firefox/defaults/pref/autoconfig.js Documents/Configs/Config-Backups/TemporaryBackup/firefox/autoconfig/

# Alacritty
# Temporary Backup
exec_always cp .config/alacritty/* Documents/Configs/Config-Backups/TemporaryBackup/alacritty/
# Backup
exec cp .config/alacritty/* Documents/Configs/Config-Backups/Backup/alacritty/

# Temporary Backups occur on every i3wm restart, while Backups occur only on every login to i3wm.
